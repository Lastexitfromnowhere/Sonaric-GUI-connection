<Window x:Class="TunnelManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sonaric Tunnel Manager" Height="600" Width="800"
        Background="#FF121212"
        WindowStyle="None"
        ResizeMode="CanResize"
        BorderThickness="1"
        BorderBrush="#FF333333">
    
    <Window.Resources>
        <!-- Style pour les boutons sociaux -->
        <Style x:Key="SocialButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF00FFB3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Background="#FF1A1A1A" MouseLeftButtonDown="DragWindow">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo et titre -->
            <StackPanel Orientation="Horizontal" Margin="20,0">
                <Image Source="/Assets/logo.png" Width="30" Height="30" RenderOptions.BitmapScalingMode="HighQuality"/>
                <TextBlock Text="Sonaric Network" 
                          Foreground="#FF00FFB3" 
                          FontSize="24" 
                          Margin="10,0,0,0"
                          VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Boutons sociaux -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="20,0">
                <Button Style="{StaticResource SocialButton}" 
                        Click="GithubButton_Click"
                        ToolTip="Github">
                    <TextBlock Text="GitHub" Foreground="#FF00FFB3"/>
                </Button>
                <Button Style="{StaticResource SocialButton}" 
                        Click="TwitterButton_Click"
                        Margin="10,0,0,0"
                        ToolTip="Twitter">
                    <TextBlock Text="Twitter" Foreground="#FF00FFB3"/>
                </Button>
                <!-- Window Control Buttons -->
                <Button Content="—" Click="MinimizeButton_Click" 
                        Style="{StaticResource SocialButton}"
                        Margin="20,0,0,0"
                        Width="30"/>
                <Button Content="□" Click="MaximizeButton_Click"
                        Style="{StaticResource SocialButton}"
                        Width="30"/>
                <Button Content="×" Click="CloseButton_Click"
                        Style="{StaticResource SocialButton}"
                        Width="30"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Connection Form -->
            <Border Background="#FF1A1A1A" CornerRadius="8">
                <StackPanel Margin="20">
                    <TextBlock Text="Configuration SSH" 
                             Foreground="White" 
                             FontSize="20" 
                             Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Adresse du serveur:" 
                             Foreground="Gray" 
                             Margin="0,5"/>
                    <TextBox x:Name="hostTextBox" 
                            Background="#FF262626" 
                            Foreground="White"
                            BorderThickness="0"
                            Padding="5"
                            Height="30"/>
                    
                    <TextBlock Text="Nom d'utilisateur:" 
                             Foreground="Gray" 
                             Margin="0,10,0,5"/>
                    <TextBox x:Name="usernameTextBox" 
                            Background="#FF262626" 
                            Foreground="White"
                            BorderThickness="0"
                            Padding="5"
                            Height="30"/>
                    
                    <TextBlock Text="Mot de passe:" 
                             Foreground="Gray" 
                             Margin="0,10,0,5"/>
                    <PasswordBox x:Name="passwordBox" 
                               Background="#FF262626"
                               BorderThickness="0"
                               Padding="5"
                               Height="30"/>
                    
                    <Button x:Name="ConnectButton"
                            Content="Se connecter" 
                            Click="ConnectButton_Click"
                            Background="#FF00FFB3" 
                            Foreground="Black"
                            BorderThickness="0"
                            Height="35" 
                            Margin="0,20,0,0"/>
                </StackPanel>
            </Border>

            <!-- Terminal -->
            <Border Grid.Column="2" 
                    Background="#FF1A1A1A" 
                    CornerRadius="8">
                <DockPanel Margin="20">
                    <TextBlock Text="Terminal" 
                             Foreground="White" 
                             FontSize="20" 
                             DockPanel.Dock="Top"
                             Margin="0,0,0,20"/>
                    <TextBox x:Name="terminalTextBox" 
                            Background="#FF262626"
                            Foreground="#FF00FFB3" 
                            FontFamily="Consolas"
                            BorderThickness="0"
                            Padding="10"
                            IsReadOnly="True" 
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto"
                            AcceptsReturn="True"/>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>